{
    "name": "@pike-lsp/pike-lsp-server",
    "version": "0.1.0-alpha.1",
    "description": "Pike Language Server Protocol implementation",
    "type": "module",
    "main": "./dist/server.js",
    "types": "./dist/server.d.ts",
    "bin": {
        "pike-lsp-server": "./dist/server.js"
    },
    "scripts": {
        "build": "tsc",
        "clean": "rm -rf dist",
        "watch": "tsc --watch",
        "test": "pnpm build && node --test dist/workspace-index.test.js",
        "test:smoke": "pnpm build && node --test dist/tests/smoke.test.js",
        "typecheck": "tsc --noEmit"
    },
    "dependencies": {
        "@pike-lsp/core": "workspace:*",
        "@pike-lsp/pike-bridge": "workspace:*",
        "@pike-lsp/pike-analyzer": "workspace:*",
        "vscode-languageserver": "^9.0.1",
        "vscode-languageserver-textdocument": "^1.0.11"
    },
    "devDependencies": {
        "@types/node": "^20.10.0",
        "typescript": "^5.3.0"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}