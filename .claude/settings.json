{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/git-workflow-gate.sh"
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/test-integrity-gate.sh"
          },
          {
            "type": "command",
            "command": "bash .claude/hooks/type-safety-gate.sh"
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/test-integrity-gate.sh"
          },
          {
            "type": "command",
            "command": "bash .claude/hooks/type-safety-gate.sh"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/decisions-inject.sh"
          }
        ]
      }
    ]
  }
}
