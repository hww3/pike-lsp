{
  "name": "pike-lsp",
  "version": "0.1.0-alpha.23",
  "private": true,
  "description": "Pike Language Server Protocol implementation and VSCode extension",
  "author": "Pike LSP Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/TheSmuks/pike-lsp.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "bun run build:tsc",
    "build:tsc": "bunx tsc --build",
    "build:packages": "bun run --filter '*' build",
    "build:docs": "bun run docs:pike && bun run docs:typescript && bun run docs:benchmarks && docusaurus build",
    "docs:typescript": "typedoc",
    "docs:pike": "node scripts/generate-pike-docs.mjs",
    "docs:benchmarks": "node scripts/generate-benchmark-docs.js",
    "clean": "bun run --filter '*' clean",
    "test": "bun test ./packages/pike-bridge ./packages/pike-lsp-server",
    "test:packages": "bun test ./packages/pike-bridge ./packages/pike-lsp-server",
    "test:all": "./scripts/run-tests.sh",
    "typecheck": "bunx tsc --build --dry",
    "lint": "eslint . --ext .ts,.tsx,.js",
    "lint:fix": "eslint . --ext .ts,.tsx,.js --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,json,md}\"",
    "prepare": "husky",
    "postinstall": "bash scripts/setup-workspace-links.sh",
    "docusaurus": "docusaurus",
    "start": "docusaurus start",
    "swizzle": "docusaurus swizzle",
    "deploy": "docusaurus deploy",
    "clear": "docusaurus clear"
  },
  "devDependencies": {
    "@docusaurus/core": "^3.9.2",
    "@docusaurus/preset-classic": "^3.9.2",
    "@eslint/js": "^10.0.1",
    "@types/node": "^25.3.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "eslint": "^10.0.0",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "prettier": "^3.8.1",
    "typedoc": "^0.28.17",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0",
    "xml2js": "^0.6.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "trustedDependencies": [
    "esbuild"
  ],
  "dependencies": {
    "@docusaurus/module-type-aliases": "^3.9.2",
    "@docusaurus/tsconfig": "^3.9.2",
    "@docusaurus/types": "^3.9.2",
    "@mdx-js/react": "^3.1.1",
    "clsx": "^2.1.1",
    "prism-react-renderer": "^2.4.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-router": "^7.13.0",
    "react-router-dom": "^7.13.0"
  }
}
