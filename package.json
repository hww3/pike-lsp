{
  "name": "pike-lsp",
  "version": "0.1.0-alpha.5",
  "private": true,
  "description": "Pike Language Server Protocol implementation and VSCode extension",
  "author": "Pike LSP Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/TheSmuks/pike-lsp.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "bun run build:tsc",
    "build:tsc": "bunx tsc --build",
    "build:packages": "bun run --filter '*' build",
    "clean": "bun run --filter '*' clean",
    "test": "bun run test:packages",
    "test:packages": "bun run --filter '*' test",
    "test:all": "./scripts/run-tests.sh",
    "typecheck": "bunx tsc --build --dry",
    "prepare": "husky",
    "postinstall": "bash scripts/setup-workspace-links.sh"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "husky": "^9.1.7",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "trustedDependencies": [
    "esbuild"
  ]
}
